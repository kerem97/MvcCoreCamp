@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kullanıcı Rol Listesi</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>Kullanıcı</th>
        <th>Rol Ata</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.UserName</td>
            <td><a href="/Admin/Role/AssignRole/@x.Id" class="btn btn-outline-dark">Rol Ata</a></td>
        </tr>
    }
</table>

<a href="/Admin/Role/Index" class="btn btn-outline-info">Rol Listesi</a>