@using MvcCoreCamp.Models
@model List<RoleAssignViewModel>

@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleID" />
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" asp-for="@Model[i].Exists" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].Exists">@Model[i].Name</label>
        </div>

    }
    <br />
    <button class="btn btn-outline-info">Kaydet</button>
</form>
<br /><br />
<a href="/Admin/Role/UserRoleList/" class="btn btn-outline-dark">Kullanıcı Rol Listesi </a>
