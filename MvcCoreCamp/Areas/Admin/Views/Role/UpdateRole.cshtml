@using MvcCoreCamp.Models
@model RoleUpdateViewModel

@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rol Düzenleme Sayfası</h1>
<form method="post">
    <div class="form-group">
        <label>Role ID</label>
        <input type="text" name="Id" value="@Model.Id" class="form-control" />
    </div>
    <div class="form-group">
        <label>Role Adı</label>
        <input type="text" name="name" value="@Model.name" class="form-control" />
    </div>
    <button class="btn btn-outline-success">Kaydet</button>
</form>

