@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByAuthor";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<h1>Yazarın Blogları</h1>

<table class="table table-bordered">
    <tr>
        <td>#</td>
        <td>Blog Başlığı</td>
        <td>Oluşturulma Tarihi</td>
        <td>Kategori</td>
        <td>Durum</td>
        <td>Sil</td>
        <td>Güncelle</td>
        <td>Detaylar</td>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.BlogID</td>
            <td>@x.BlogTitle</td>
            <td>@(((DateTime)x.Date).ToString("dd-MMM-yyyy"))</td>
            <td>@x.Category.CategoryName</td>
            <td>@x.Status</td>
            <td><a href="/Blog/DeleteBlog/@x.BlogID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Blog/UpdateBlog/@x.BlogID" class="btn btn-outline-info">Güncelle</a></td>
            <td><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Blog/AddBlog/" class="btn btn-outline-success">Yeni Blog Oluştur</a>

