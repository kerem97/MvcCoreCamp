@using EntityLayer.Concrete
@model List<Blog>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son Eklenen Bloglar</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Görsel </th>
                                <th> Başlık </th>
                                <th> Kategori </th>
                                <th> Tarih </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
                                <tr>
                                    <td>@x.BlogID</td>
                                    <td>
                                        <img src="~/author/assets/images/faces/face1.jpg" class="mr-2" alt="image">
                                    </td>
                                    <td>@x.BlogTitle</td>
                                    <td>
                                        <label class="badge badge-gradient-success">@x.Category.CategoryName</label>
                                    </td>
                                    <td>@(((DateTime)x.Date).ToString("dd-MMM-yyyy")) </td>
                                    <td><a href="/Blog/BlogReadAll/@x.BlogID" class="btn btn-outline-primary">Detaylar</a> </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>