@model MvcCoreCamp.Models.AddProfileImage
@{
    ViewData["Title"] = "AddAuthor";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Profil Bilgileri Güncelleme Sayfası</h4>

                <div class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Adınız</label>
                        <input type="text" class="form-control" asp-for="AuthorName">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail Adresi</label>
                        <input type="email" class="form-control" asp-for="Mail">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        <input type="password" class="form-control" asp-for="Password">
                    </div>

                    <div class="form-group">
                        <label>Profil fotoğrafı yükle</label>
                        <input type="file" name="AuthorImage" />
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea1">Hakkımda</label>
                        <textarea class="form-control" asp-for="AuthorAbout" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                    <button class="btn btn-light">İptal</button>
                </div>
            </div>
        </div>
    </div>
</form>