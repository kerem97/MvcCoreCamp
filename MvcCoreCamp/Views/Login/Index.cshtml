@model LoginViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Giriş yap</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">Mail adresi</label>
                        <input type="text" class="form-control" asp-for="Username">
                        <small id="emailHelp" class="form-text text-muted">Bilgileriniz üçüncü kişilerle paylaşılmayacaktır.</small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Şifre</label>
                        <input type="password" class="form-control" asp-for="Password">
                    </div>
                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Beni hatırla</label>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Oturum aç</button>
                    <p><a href="/Register/Index/"> Bir hesabınız yok mu?</a></p>
                </form>
            </div>
        </div>
    </div>
</section>